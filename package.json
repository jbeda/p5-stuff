{
  "name": "p5-stuff",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "build": "npm run build:prep && npm run build:dist",
    "dev": "npm run build:prep && npm run build:dev",
    "copy": "cp ./public/* ./dist",
    "clean": "rm -rf ./dist/*",
    "build:prep": "mkdir -p ./dist && npm run clean && npm run copy",
    "build:dist": "esbuild ./src/index.js --bundle --minify --keep-names --sourcemap --outdir=./dist --platform=browser --define:RELOAD=false",
    "build:dev": "esbuild ./src/index.js --bundle --sourcemap --outdir=./dist --watch --servedir=./dist --platform=browser --define:RELOAD=true"

  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.19.6",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "p5": "^1.8.0"
  }
}
